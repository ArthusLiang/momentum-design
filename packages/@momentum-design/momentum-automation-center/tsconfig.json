{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "paths": {
      "@lib": ["src/index"]
    }
  },
  "exclude": [
    "release"
  ]
}
